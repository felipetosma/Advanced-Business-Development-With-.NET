@{
    ViewData["Title"] = "Lista de TODOs";

    var TODOs = ViewData["AllTodos"] as List<TODO>; // Fazendo cast seguro
}


<!-- Welcome Section -->
<div class="text-center" style="padding: 20px; background-color: #f9f3f3;">
    <h1 style="color: #b30000; font-family: 'Lucida Sans', Arial, sans-serif; text-align: center;">Bem-vindo(a) ao TODO List</h1>
    <p style="font-family: Arial, sans-serif; font-size: 18px;">
        Learn about <a href="https://learn.microsoft.com/aspnet/core" style="color: #b30000; text-decoration: none;">building Web apps with ASP.NET Core</a>.
    </p>
    <h1>
        <a asp-controller="Todo" asp-action="Index" style="color: #b30000; text-decoration: none; font-family: Arial, sans-serif; font-size: 24px;">TODO LIST</a>
    </h1>
    <h1>
        <a asp-controller="Todo" asp-action="AddTodo" style="color: #b30000; text-decoration: none; font-family: Arial, sans-serif; font-size: 24px;">Criar TODO</a>
    </h1>
</div>

<!-- Main Welcome Section -->


<p style="text-align: center;">
    <a class="btn" asp-controller="Objetivo" asp-action="Index" style="background-color: #b30000; color: white; font-family: 'Lucida Sans'; padding: 10px 20px; border-radius: 5px; text-decoration: none; border: none;">Ver Objetivos</a>
</p>

<!-- TODO List Section -->
<div style="display: flex; flex-direction: row; width: 100vw; flex-wrap: wrap; gap: 15px; justify-content: center; background-color: #f9f3f3; padding: 20px;">
    @{
        if (TODOs != null && TODOs.Any()) // Verifica se TODOs não está nulo e se contém itens
        {
            foreach (var todo in TODOs)
            {
                <div class="card" style="width: 18rem; border-radius: 10px; overflow: hidden; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); transition: transform 0.3s, box-shadow 0.3s; background-color: #ffe5e5; border: 1px solid #b30000;">
                    <img src="https://esr.rnp.br/wp-content/uploads/2023/08/programming-background-with-person-working-with-codes-computer-scaled-1-1024x683.jpg" class="card-img-top" alt="Imagem da tarefa" style="height: 180px; object-fit: cover;">
                    <div class="card-body" style="padding: 15px;">
                        <h5 class="card-title" style="font-weight: bold; color: #b30000;">@todo.Tarefa</h5>
                        <p class="card-text">@todo.Descricao</p>
                        @{
                            if (todo.feto)
                            {
                                <p class="card-text" style="color: green; font-weight: bold;">Tarefa feita</p>
                            }
                            else
                            {
                                <p class="card-text" style="color: red; font-weight: bold;">Tarefa não feita</p>
                            }
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <p style="color: #b30000; font-family: Arial, sans-serif; text-align: center;">Não há TODOs disponíveis no momento.</p>
        }
    }
</div>

<style>
    body {
        background-color: #f9f3f3;
        font-family: Arial, sans-serif;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 16px rgba(179, 0, 0, 0.2);
    }

    .text-center a {
        color: #b30000;
        text-decoration: none;
        transition: color 0.3s;
    }

        .text-center a:hover {
            color: #990000;
        }

    .btn {
        background-color: #b30000;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        border: none;
    }

        .btn:hover {
            background-color: #990000;
        }
</style>


