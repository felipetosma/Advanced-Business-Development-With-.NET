@model TODOList.Models.Objetivo

@{
    ViewData["Title"] = "Criar Objetivo";
}

<h1 style="color: #b30000; font-family: 'Lucida Sans'; text-align: center;">Criar Novo Objetivo</h1>

<h4 style="color: #ff4d4d; font-family: 'Lucida Sans';">Meus Objetivos</h4>
<hr style="border-color: #ff4d4d;" />
<form asp-action="Create" style="max-width: 600px; margin: auto;">
    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="Nome" class="control-label" style="color: #b30000; font-weight: bold;"></label>
        <input asp-for="Nome" class="form-control" style="border: 1px solid #b30000; border-radius: 5px; padding: 10px;" />
        <span asp-validation-for="Nome" class="text-danger" style="color: #ff1a1a;"></span>
    </div>
    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="Descricao" class="control-label" style="color: #b30000; font-weight: bold;"></label>
        <input asp-for="Descricao" class="form-control" style="border: 1px solid #b30000; border-radius: 5px; padding: 10px;" />
        <span asp-validation-for="Descricao" class="text-danger" style="color: #ff1a1a;"></span>
    </div>
    <div class="form-group" style="text-align: center;">
        <input type="submit" value="Salvar Objetivo" class="btn" style="background-color: #b30000; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer;" />
    </div>
    <style>
        body {
            background-color: #f9f3f3;
        }

        hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(179, 0, 0, 0.2);
        }
    </style>

</form>
