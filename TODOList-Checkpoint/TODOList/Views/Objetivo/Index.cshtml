@model IEnumerable<TODOList.Models.Objetivo>

    @{
    ViewData["Title"] = "Objetivos";
    }

<h1 style="color: #b30000; font-family: 'Lucida Sans'; text-align: center;">Meus Objetivos</h1>

<p style="text-align: center;">
    <a asp-action="Create" class="btn" style="background-color: #b30000; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none; border: none;">Criar Novo Objetivo</a>
</p>

<table class="table" style="width: 100%; max-width: 800px; margin: 20px auto; border-collapse: collapse; font-family: 'Lucida Sans'; text-align: center;">
    <thead>
        <tr style="background-color: #ffe5e5; color: #b30000;">
            <th style="padding: 10px; border-bottom: 2px solid #b30000;">Nome</th>
            <th style="padding: 10px; border-bottom: 2px solid #b30000;">Descrição</th>
            <th style="padding: 10px; border-bottom: 2px solid #b30000;">Data de Criação</th>
            <th style="padding: 10px; border-bottom: 2px solid #b30000;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="background-color: #f9f3f3;">
                <td style="padding: 10px; border-bottom: 1px solid #b30000;">@item.Nome</td>
                <td style="padding: 10px; border-bottom: 1px solid #b30000;">@item.Descricao</td>
                <td style="padding: 10px; border-bottom: 1px solid #b30000;">@item.DataCriacao.ToShortDateString()</td>
                <td style="padding: 10px; border-bottom: 1px solid #b30000;">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn" style="background-color: #b30000; color: white; padding: 5px 10px; border-radius: 5px; text-decoration: none; hover: background-color: #990000">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    table {
        width: 100%;
        max-width: 800px;
        margin: 20px auto;
        border-collapse: collapse;
        font-family: 'Lucida Sans';
        text-align: center;
    }

    th, td {
        padding: 12px;
        border: 1px solid #b30000;
    }

    th {
        background-color: #ffe5e5;
        color: #b30000;
        border-bottom: 2px solid #b30000;
    }

    tbody tr:nth-child(even) {
        background-color: #f9f3f3;
    }

    a.btn {
        background-color: #b30000;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        text-decoration: none;
        border: none;
    }

        hover {
            background-color: #990000;
        }
</style>
